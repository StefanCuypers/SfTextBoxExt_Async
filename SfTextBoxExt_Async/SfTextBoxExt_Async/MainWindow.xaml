<Window x:Class="SfTextBoxExt_Async.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SfTextBoxExt_Async"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Vertical">
        <syncfusion:SfTextBoxExt x:Name="textBoxExt"
                                Width="300"
                                HorizontalAlignment="Left"
                                 Margin="10"/>
        <Button Content="Clear" Click="Button_Click" Margin="10" Width="100" HorizontalAlignment="Left"/>
        <CheckBox x:Name="chkSynch" Content="Synchronous" Margin="10" IsChecked="False" HorizontalAlignment="Left"/>
    </StackPanel>
</Window>
